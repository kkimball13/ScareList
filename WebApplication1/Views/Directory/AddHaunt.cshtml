
@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
}


<div ng-app="app" ng-controller="Main as vm">

    <div ng-hide="!showSuccessAlert" class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <strong>Submission Successful!</strong> Another terrifying haunt added to our database.
    </div>

    <div class="container" style="margin-top:50px; background-color: papayawhip">

        <div>
            <p>You are entering data for: <span style="color: red; font-size: 22px"><b> {{addHaunt.name}}</b></span></p>
        </div>
        <div class="contact-form col-md-8">
            <form name="hauntInfo" id="hauntInfo" ng-model="addHaunt" role="form">
                <div class="form-group">
                    <label for="name">Haunt Name</label>
                    <input type="text" ng-model="addHaunt.name" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="addressLine1">Address Line 1</label>
                    <input type="text" ng-model="addHaunt.addressLine1" class="form-control" id="addressLine1" name="addressLine1" required="">
                </div>
                <div class="form-group">
                    <label for="addressLine2">Address Line 2</label>
                    <input type="text" ng-model="addHaunt.addressLine2" class="form-control" id="addressLine2" name="addressLine2" required="">
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" ng-model="addHaunt.city" class="form-control" id="city" name="city" required="">
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" ng-model="addHaunt.state" class="form-control" id="state" name="state" required="">
                </div>
                <div class="form-group">
                    <label for="zipcode">Zip code</label>
                    <input type="text" ng-model="addHaunt.zipcode" class="form-control" id="zipcode" name="zipcode" required="">
                </div>
                <div class="form-group">
                    <label for="uRL">Website Address (URL)</label>
                    <input type="text" ng-model="addHaunt.URL" class="form-control" id="uRL" name="URL" required="">
                </div>
                <div class="form-group">
                    <label for="description">Short Description of Haunt</label>
                    <textarea class="form-control" ng-model="addHaunt.description" rows="10" id="description" name="description" required=""></textarea>
                </div>
                <button type="submit" ng-click="vm.addHaunt(addHaunt)" class="btn btn-theme-bg">Submit</button>
            </form><!--form-->
        </div>
    </div>

</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/app.module.js"></script>
<script src="~/app/main.js"></script>
